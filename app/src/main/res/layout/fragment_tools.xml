<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Nome da vacina"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="398dp"
        android:layout_height="222dp"
        android:layout_marginBottom="32dp"
        android:text="Descricao"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/text_tools"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="398dp"
        android:layout_height="24dp"
        android:layout_marginBottom="32dp"
        android:text="Idade recomendada"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="398dp"
        android:layout_height="24dp"
        android:layout_marginBottom="32dp"
        android:text="Epoca recomendada"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="176dp"
        android:layout_height="23dp"
        android:layout_marginBottom="50dp"
        android:text="Importancia"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        tools:srcCompat="@tools:sample/avatars[15]" />
</androidx.constraintlayout.widget.ConstraintLayout>